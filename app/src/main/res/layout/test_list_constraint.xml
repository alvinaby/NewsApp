<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="20dp"
    android:background="@drawable/item_bg">

    <ImageView
        android:id="@+id/constraintThumbnail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/image_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/constraintTitle"
        android:layout_width="160dp"
        android:layout_height="27dp"
        android:text="@string/newsTitle"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintThumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/constraintPublisher"
        android:layout_width="156dp"
        android:layout_height="21dp"
        android:text="@string/publisher"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/constraintThumbnail"
        app:layout_constraintTop_toBottomOf="@+id/constraintTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>